<div class="grid-col">
  <div class="grid-row">
    <div>
      <p>Enter source code here:</p>
      {{ivy-codemirror 
        value=source 
        options=(hash lineNumbers=true mode="javascript" theme=theme)
        valueUpdated=(action (mut source))
      }}
      <p>Choose any node operations:</p>
      <div class="mode-options">
        {{#radio-button
          value="remove"
          groupValue=nodeOp
          changed=(action "opChanged")
          }}
          <span>Remove</span>
        {{/radio-button}}
        {{#radio-button
          value="replace"
          groupValue=nodeOp
          changed=(action "opChanged")
          }}
          <span>Replace</span>
        {{/radio-button}}
        {{#radio-button
          value="insert"
          groupValue=nodeOp
          changed=(action "opChanged")
          }}
          <span>Insert</span>
        {{/radio-button}}
      </div>
    </div>
    {{#if showDest}}
      <div>
	<p>Enter destination code here:</p>
	{{ivy-codemirror 
	  value=dest 
	  valueUpdated=(action (mut dest))
	  options=(hash mode=jsonMode theme=theme foldGutter=true)}}
      </div>
    {{/if}}
  </div>
  <div class="grid-row">
    <div>
      <p>Codemod contents here:</p>
      {{ivy-codemirror value=nodeApi options=(hash lineNumbers=true mode="javascript" theme=theme autoIndent=true )}}
    </div>
  </div>
</div>