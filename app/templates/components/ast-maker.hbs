<div {{split-view sizes=(array 50 50)}}>
  <div {{split-view sizes=(array 50 40) direction="vertical"}}>
    <div>
      {{!-- <p><strong>1.</strong> Enter source code here:</p> --}}
      {{ivy-codemirror 
	value=code 
        options=(hash 
        lineNumbers=true 
        mode=mode 
        theme=theme)
	valueUpdated=(action (mut code))
      }}
    </div>
    <div>
      {{!-- <p><strong>2.a.</strong> Enter destination code here:</p> --}}
      {{ivy-codemirror 
        value=dest 
        valueUpdated=(action (mut dest))
        options=(hash 
        lineNumbers=true 
        mode=mode 
        theme=theme 
        foldGutter=true)}}
    </div>
  </div>
  <div {{split-view sizes=(array 50 40) direction="vertical"}}>
    <div>
      {{!-- <p><strong>3.</strong> Codemod : </p> --}}
      {{ivy-codemirror 
        value=codemod 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=theme 
        autoIndent=true )
     	valueUpdated=(action (mut codemod))
      }}
    </div>
    <div>
      {{!-- <p><strong>4.</strong> Output :</p> --}}
      {{ivy-codemirror 
        value=output 
        options=(hash 
        lineNumbers=true 
        mode=mode 
        theme=theme 
        autoIndent=true )}}
    </div>
  </div>
</div>